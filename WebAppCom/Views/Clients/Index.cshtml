@model IEnumerable<WebAppCom.Models.Client>

@{
    ViewData["Title"] = "Clientes";
}
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="pr-2">
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a type="button" asp-controller="Home" asp-action="Index" class="btn btn-sm btn-light border-dark d-inline"><i class="fas fa-arrow-left"></i></a>
                                <a asp-action="Create" class="btn btn-sm btn-light border-dark">Cliente <i class="fas fa-plus-square"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="table-responsive">
                            <table class="table display responsive nowrap myTable" width="100%">
                                <thead>
                                    <tr>
                                        <th data-priority="0">
                                            @Html.DisplayNameFor(model => model.TradeName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.DocumentType)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Document)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ContactName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ContactLastName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Anniversary)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Address)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Phone1)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Phone2)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Email)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Note)
                                        </th>
                                        <th data-priority="12"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TradeName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DocumentType.Description)
                                        </td>
                                        @if (item.DocumentType.Description == "Cédula")
                                        {
                                            <td class="identify">
                                                @Html.DisplayFor(modelItem => item.Document)
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Document)
                                            </td>
                                        }
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ContactName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ContactLastName)
                                        </td>
                                        <td class="dp1">
                                            @Html.DisplayFor(modelItem => item.Anniversary)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address)
                                        </td>
                                        <td class="phone">
                                            @Html.DisplayFor(modelItem => item.Phone1)
                                        </td>
                                        <td class="phone">
                                            @Html.DisplayFor(modelItem => item.Phone2)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Note)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.ClientId" class="d-inline"><i class="fa fa-pen-alt text-primary"></i></a> |
                                            <a onclick="deleteItem(@item.ClientId, '/Clients/Delete/')"
                                               class="text-danger">
                                                <i class="fa fa-trash fa-lg"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>