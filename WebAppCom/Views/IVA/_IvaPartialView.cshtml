@model IEnumerable<WebAppCom.Models.Iva>
<div class="table-responsive-md">
    <table class="table settingsTable" style="width:100%">
        <thead>
            <tr>
                <th>
                    Descripción
                </th>
                <th>
                    Taza
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rate)
                </td>
                <td class="text-center">
                    <a onclick="loadPartialIva(@item.Ivaid)"><i class="fa fa-marker fa-lg"></i></a> |
            
                    <a onclick="deleteItem(@item.Ivaid, '/Iva/IvaDelete/')"
                       class="text-danger">
                        <i class="fa fa-trash fa-lg"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>