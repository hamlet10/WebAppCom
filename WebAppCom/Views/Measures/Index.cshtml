@model IEnumerable<WebAppCom.Models.Measure>

@{
    ViewData["Title"] = "Administración de Unidad de Medidas";
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abbreviation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Abbreviation)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MeasureId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MeasureId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MeasureId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
